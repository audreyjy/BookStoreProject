@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BooksViewModel


@foreach (Books b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small></small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            Author: @b.Author
            <br />
            Publisher: @b.Publisher
            <br />
            ISBN: @b.Isbn
            <br />
            Classification/Category: @b.Classification / @b.Category
            <br />
            Number of Pages: @b.PageCount
            <br />
            Price: $@b.Price
            <br />
        </div>
    </div>

    @*<h3></h3>

    <ul>
        <li>Author: @b.Author</li>
        <li>Publisher: @b.Publisher</li>
        <li>ISBN: @b.Isbn</li>
        <li>Classification/Category: @b.Classification / @b.Category</li>
        <li>Number of Pages: @b.PageCount</li>
        <li>Price: $@b.Price</li>
    </ul>
    <br />*@



}

<!-- 'page-model' is a special tag helper, pass it in all the page info that came in through the controller -->
<div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"
     ></div> <!-- this line is what gives us our page links -->
